[core]
	editor = vim
	pager = less -Rc
	autocrlf = input

[user]
	name = Viktor Alex
	email = viktoralex@365.is

[merge]
	tool = vimdiff

[alias]
	co = checkout
	br = branch
	lg = log --format=\"%h %cd %an %s\" -25
        ci = commit
	st = status
	lg2 = log --color=auto --graph --decorate
        lo = log --color=auto --decorate --abbrev-commit --stat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	le = log --oneline --decorate
	br2 = branch -a -v
	di = diff --color-words
	dis = diff --color-words --staged
	staged = diff --cached
	pu = pull --ff-only
	tree = log --graph --pretty=oneline --abbrev-commit --decorate
	g = grep -n
	edit = "!vim `git ls-files -m` -p"

[push]
        default = current

[color]
        ui = true
